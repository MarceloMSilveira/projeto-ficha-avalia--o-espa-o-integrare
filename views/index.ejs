<%- include('partials/header') %>

<div class="tabs">
  <button class="tab-button active" data-tab="cadastrais">1. Informações Cadastrais</button>
  <button class="tab-button" data-tab="historico">2. Histórico Clínico</button>
</div>

<form>
  <div id="cadastrais" class="tab-content active">
    <label>Nome completo:</label>
    <input type="text" name="nome">

    <label>Data de nascimento:</label>
    <input type="date" name="data_nascimento">

    <label>Endereço:</label>
    <input type="text" name="endereco">

    <label>Bairro:</label>
    <input type="text" name="bairro">

    <label>Cidade:</label>
    <input type="text" name="cidade">

    <label>Estado:</label>
    <input type="text" name="estado">

    <label>CEP:</label>
    <input type="text" name="cep">

    <label>Telefone celular:</label>
    <input type="text" name="telefone_cel">

    <label>Telefone residencial:</label>
    <input type="text" name="telefone_res">

    <label>Telefone do trabalho:</label>
    <input type="text" name="telefone_trab">

    <label>E-mail:</label>
    <input type="email" name="email">

    <label>CPF:</label>
    <input type="text" name="cpf">

    <label>Profissão:</label>
    <input type="text" name="profissao">

    <label>Empresa:</label>
    <input type="text" name="empresa">

    <label>Sexo:</label>
    <select name="sexo">
      <option value="">Selecione</option>
      <option value="masculino">Masculino</option>
      <option value="feminino">Feminino</option>
      <option value="outro">Outro</option>
    </select>

    <label>Grau de escolaridade:</label>
    <input type="text" name="escolaridade">

    <label>Nome do cônjuge:</label>
    <input type="text" name="conjuge">

    <label>Número de filhos:</label>
    <input type="number" name="numero_filhos">

    <label>Profissão do cônjuge:</label>
    <input type="text" name="profissao_conjuge">

    <label>Responsável (se menor de 18 anos):</label>
    <input type="text" name="responsavel">

    <label>Telefone do responsável:</label>
    <input type="text" name="telefone_responsavel">

    <label>Situação atual de trabalho:</label>
    <select name="situacao_trabalho">
      <option value="">Selecione</option>
      <option>Tempo integral</option>
      <option>Tempo parcial</option>
      <option>Aposentado</option>
      <option>Afastado</option>
      <option>Trabalha em casa</option>
      <option>Desempregado</option>
      <option>Estudante integral</option>
      <option>Estudante parcial</option>
    </select>

    <label>Estado Civil:</label>
    <select name="estado_civil">
      <option value="">Selecione</option>
      <option>Solteiro</option>
      <option>Separado</option>
      <option>Casado</option>
      <option>2º Casamento</option>
      <option>Viúvo</option>
      <option>Outros</option>
    </select>

    <label>Dentista da família (Nome):</label>
    <input type="text" name="dentista_nome">

    <label>Telefone do dentista:</label>
    <input type="text" name="dentista_telefone">
  </div>

  <div id="historico" class="tab-content">
    <label>Quem indicou você?</label>
    <input type="text" name="quem_indicou">

    <label>Endereço do indicador:</label>
    <input type="text" name="endereco_indicador">

    <label>Telefone do indicador:</label>
    <input type="text" name="telefone_indicador">
    <br><br>
    <fieldset>
      <legend>Profissionais de saúde consultados</legend>

      <label>Nome do profissional:</label>
      <input type="text" name="profissional_nome_1">

      <label>Especialidade:</label>
      <input type="text" name="especialidade_1">

      <label>Endereço:</label>
      <input type="text" name="endereco_prof_1">

      <label>Telefone:</label>
      <input type="text" name="telefone_prof_1">

      <label>Diagnóstico e tratamento:</label>
      <textarea name="diagnostico_1"></textarea>

      <button type="button" onclick="adicionarProfissional()">Adicionar outros</button>
    </fieldset>

    <label>Queixa principal:</label>
    <textarea name="queixa_principal"></textarea>

    <label>Queixa secundária:</label>
    <textarea name="queixa_secundaria"></textarea>

    <label>Outras queixas:</label>
    <textarea name="outras_queixas"></textarea>

    <label>História médica:</label>
    <textarea name="historia_medica"></textarea>

    <label>Medicação atual e doses:</label>
    <textarea name="medicacao_atual"></textarea>

    <label>Medicação passada e doses:</label>
    <textarea name="medicacao_passada"></textarea>

    <label>Histórico familiar:</label>
    <textarea name="historico_familiar"></textarea>

    <label>Alergias (remédios, alimentos, outros):</label>
    <textarea name="alergias"></textarea>

    <label>Resultados de exames por imagem (relacionados ao problema):</label>
    <textarea name="exames_imagem"></textarea>
  </div>

  <div id="habitos" class="tab-content">
    <fieldset>
      <legend>Hábitos</legend>
      <label><input type="checkbox" name="habitos[]" value="morder_unhas"> Morder unhas</label>
      <label><input type="checkbox" name="habitos[]" value="mascar_chicletes"> Mascar chicletes</label>
      <label><input type="checkbox" name="habitos[]" value="uso_telefone"> Uso contínuo de telefone</label>
      <label><input type="checkbox" name="habitos[]" value="morder_objetos"> Morder objetos</label>
      <label><input type="checkbox" name="habitos[]" value="uso_computador"> Uso contínuo de computador</label>
      <label><input type="checkbox" name="habitos[]" value="morder_labios"> Morder lábios, língua ou bochechas</label>
      <label><input type="checkbox" name="habitos[]" value="ficar_em_pe"> Alta permanência na posição de pé</label>
      <label><input type="checkbox" name="habitos[]" value="ficar_sentado"> Alta permanência na posição sentada</label>
    </fieldset>

    <fieldset>
      <legend>Sintomas (lado direito/esquerdo)</legend>
      <label>Dores de cabeça frequentes:
        <input type="checkbox" name="cefaleia_d" value="direito"> D
        <input type="checkbox" name="cefaleia_e" value="esquerdo"> E
      </label>
      <label>Dor facial:
        <input type="checkbox" name="dor_facial_d" value="direito"> D
        <input type="checkbox" name="dor_facial_e" value="esquerdo"> E
      </label>
      <label>Dor ou barulho na mastigação:
        <input type="checkbox" name="barulho_mastigacao_d" value="direito"> D
        <input type="checkbox" name="barulho_mastigacao_e" value="esquerdo"> E
      </label>
      <!-- Adicione os demais sintomas conforme necessário -->
    </fieldset>

    <label>Outros sintomas / observações:</label>
    <textarea name="outros_sintomas"></textarea>

    <label>O que você achou que causou estes problemas?</label>
    <textarea name="causa_problemas"></textarea>

    <label>Há mais alguém com esses sintomas na sua família?</label>
    <select name="sintomas_familia">
      <option value="">Selecione</option>
      <option value="sim">Sim</option>
      <option value="nao">Não</option>
    </select>

    <label>Explique:</label>
    <textarea name="explicacao_sintomas_familia"></textarea>

    <label>Com que frequência ocorrem os sintomas?</label>
    <input type="text" name="frequencia_sintomas">

    <label>Quando ocorrem, quanto tempo duram?</label>
    <input type="text" name="duracao_sintomas">

    <label>Quando os sintomas são piores?</label>
    <input type="text" name="pior_momento">

    <label>O que faz os sintomas piorarem?</label>
    <textarea name="fatores_agravantes"></textarea>

    <label>O que os faz melhorar?</label>
    <textarea name="fatores_melhoradores"></textarea>
  </div>

  
</form>

<%- include('partials/footer') %>